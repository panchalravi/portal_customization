                        <thead>
                        <tr class="datagrid-header">
                            <th class="span5">{{applicationName}}</th>
                            <th class="span5">{{organization}}</th>
                            <th class="span1 center">{{state}}</th>
                            <th class="span1 center">{{actions}}</th>
