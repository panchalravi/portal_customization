                    <div class="row-fluid">
                        <div class="bulk-actions span3 datagrid-dropdown"></div>
                        <div class="pagination span6 datagrid-pagination center"></div>
                        <div class="apieula-page-info span3 datagrid-page-number right"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modal-container"></div>
